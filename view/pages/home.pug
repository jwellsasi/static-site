        div(class="row-fluid home-content-row clearfix")
            div(class="pe-type-id-417")  
                h2(class="asi-h2 display-2 text-center" style="padding-top:10px;font-size:2.5em !important;color:#54585a !important;") Fluid Width HTML Hero w/ BG Image
                div(id="asi-fluid-html-hero")
